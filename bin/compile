#!/usr/bin/env bash

echo "-----> Installing lpsolve 5.5.0.13"

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)

cd $1
curl 'https://sourceforge.net/projects/lpsolve/files/lpsolve/5.5.0.13/lp_solve_5.5.0.13_source.tar.gz/download' -O
mkdir -p vendor/lpsolve
gzip -dc lp_solve_5.5.0.13_exe.tar.gz | tar -C vendor/lpsolve -xf -
#tar -C vendor/lpsolve -xvf lp_solve_5.5.0.13_exe.tar.gz

mkdir -p $build/.profile.d
echo 'PATH=$PATH:/app/vendor/lpsolve' > $build/.profile.d/lp_solve.sh
[InternetShortcut]
URL=https://github.com/AntonXon/heroku-buildpack-lpsolve/blob/master/bin/compile
