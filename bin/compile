#!/usr/bin/env bash

echo "-----> Installing lpsolve 5.5.0.13"

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)

cd $1
curl 'https://sourceforge.net/projects/lpsolve/files/lpsolve/5.5.0.13/lp_solve_5.5.0.13_java.zip/download' -O
mkdir -p vendor/lpsolve
#gzip -dc lp_solve_5.5.2.5_exe_ux64.tar.gz | tar -C vendor/lpsolve -xf -
#tar -C vendor/lpsolve -xvf lp_solve_5.5.0.13_exe.tar.gz

unzip -dc lp_solve_5.5.0.13_java

mkdir -p $build/.profile.d
cat <<EOF >$build/.profile.d/lp_solve.sh
export LD_LIBRARY_PATH="\$LD_LIBRARY_PATH:/app/vendor/lpsolve"
EOF
