#!/usr/bin/env bash

echo "-----> Installing lpsolve 5.5.0.13"

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)

cd $1
curl 'https://drive.google.com/u/0/uc?id=1GfVsyuqknClHLVcj3nPKmQcXkmQeu-i5&export=download' --output lib.tar
mkdir -p vendor/lpsolve
tar -C vendor/lpsolve -xvf lib.tar

mkdir -p $build/.profile.d
cat <<EOF >$build/.profile.d/lp_solve.sh
export LD_LIBRARY_PATH="\$LD_LIBRARY_PATH:/app/vendor/lpsolve"
EOF
